<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:contextClickable="true"
                android:elevation="0dp"
                android:longClickable="true"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/r_layout_name">


                <TextView
                    android:text="Nome *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Insira seu nome completo"
                    android:id="@+id/txt_nome"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_marginRight="70dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="5dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/r_layout_cpf">

                <TextView
                    android:text="CPF *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Insira seu CPF"
                    android:layout_width="match_parent"
                    android:id="@+id/txt_cpf"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="5dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/r_layout_tel">

                <TextView
                    android:text="Telefone *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Insira seu telefone de contato"
                    android:layout_width="match_parent"
                    android:id="@+id/txt_tel"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="5dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/r_layout_email">

                <TextView
                    android:text="E-mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Insira seu e-mail"
                    android:layout_width="match_parent"
                    android:id="@+id/txt_email"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="5dp">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/r_layout_end">

                <TextView
                    android:text="Endereço *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Insira seu endereço"
                    android:layout_width="match_parent"
                    android:id="@+id/txt_end"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="5dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/r_layout_comp"
                android:layout_height="95dp">

                <TextView
                    android:text="Complemento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Insira o complemento de seu endereço ou ponto de referência."
                    android:layout_width="match_parent"
                    android:id="@+id/txt_comp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#D8D8D8"
                android:layout_height="5dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="* Campo obrigatório para realizar pedidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>